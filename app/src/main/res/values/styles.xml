<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LingoAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#1E1E1E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:buttonBarButtonStyle">@style/LingoDialogButtonStyle</item>
        <item name="android:windowTitleStyle">@style/LingoDialogTitleStyle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowTitleBackgroundStyle">@style/LingoDialogTitleBackground</item>
    </style>

    <style name="LingoDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#9C27B0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LingoDialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#9C27B0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LingoDialogTitleBackground">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources> 